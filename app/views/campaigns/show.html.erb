<%= content_for :page_title, "#{@campaign.title.titleize} | Fundraising Marketplace" %>
<% content_for(:header) do %>

<script src="https://js.stripe.com/v3/stripe-beta.js"></script>

<% end %>

<div class="container">
  <div class="row topspace-lg">
    <div class="col-md-8">
      <%= render 'layouts/messages' %>
      <% unless @campaign.active %>
        <div class="alert alert-danger">
          This campaign is no longer active.
        </div>
      <% end %>
      <div>
        <%= image_tag("#{@campaign.image}?q=50&fm=jpg&w=800&fit=max", class: "img-responsive img-thumbnail") %>
      </div>
      <h2 class="page-header text-center"><%= @campaign.title.titleize %></h2>
      <h3 class="goal text-center">
        <% if @campaign.raised %>
           <span class="raised"><%= format_amount(@campaign.raised) %></span> raised so far of <strong><%= number_to_currency(@campaign.goal) %> goal</strong>
        <% else %>
          <strong><%= number_to_currency(@campaign.goal) %> goal</strong>
        <% end %>
      </h3>
      <div class="panel panel-default topspace-lg">
        <div class="panel-body lato">
          <%= simple_format(@campaign.description) %>
        </div>
      </div>
      <h3 class="text-center page-header">Donations</h3>
      <% unless @campaign.raised.to_i > 0 %>
        This campaign has not received any donations yet.
      <% else %>
        <%= render 'donations' %>
      <% end %>
    </div>
    <div class="col-md-4">
      <% if current_user && @campaign.user_id.eql?(current_user.id) && @campaign.active %>
        <h3 class="page-header text-center"><i class="fa fa-edit purple"></i> Your campaign</h3>
        <p>
          <%= link_to "Edit this campaign", edit_campaign_path(@campaign),
            class: "btn btn-lg btn-primary btn-custom btn-block"%>
        </p>
        <p>
          <%= link_to "Delete this campaign", campaign_path(@campaign), method: :delete, data: { confirm: "Are you sure you want to delete this campaign?" }, class: "btn btn-lg btn-block btn-custom btn-danger" %>
        </p>
      <% elsif @campaign.active %>
        <%= render 'paymentform' %>
      <% end %>
    </div>
  </div>
</div>
